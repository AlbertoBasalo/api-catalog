  "bugs": {
    "url": "https://github.com/angularbuilders/api-catalog/issues"
  },
  "scripts": {
    "start": "node ./dist/main.js",
    "prestart": "npm run build",
    "build": "tsc",
    "dev": "ts-node-dev ./src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"./**/*.{ts,json}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prerelease": "standard-version ",
    "release": "git push --follow-tags origin main",
    "predeploy": "npm run release",
    "deploy": "git checkout heroku-api && git merge main && git push origin heroku-api && git checkout main",
    "updates": "ncu -u"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.21",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongodb": "^3.6.10",
    "@types/node": "^14.14.35",
    "@types/nodemailer": "^6.4.1",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/validator": "^13.1.3",
    "@types/winston": "^2.4.4",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "npm-check-updates": "^11.3.0",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6"
  },
  "dependencies": {
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.6",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.5",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.5",
    "nodemailer": "^6.5.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "swagger-routes-express": "^3.3.0",
    "typescript": "^4.2.3",
